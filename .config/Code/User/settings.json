// Place your settings in this file to overwrite the default settings
{
    "editor.fontSize": 16,
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/coverage": true
    },
    "terminal.integrated.shellArgs.linux": ["-l"],
    "eslint.autoFixOnSave": true,
    "files.associations": {
      "*.vue": "html"
    },
    "puglint.enable": true,
    "pugbeautify.omitDiv": true
  }